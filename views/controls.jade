extends ./parts/layout.jade
block vars
    - page = 'Controls';
block main
    .main-heading
        .main-title
            ol.breadcrumb
                li
                    a(href="./") Forms
                li.active Controls
        .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .template.template__controls
            .row
                .col-md-6
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Inputs
                        .panel-body
                            .form-horizontal
                                .form-group
                                    label.col-sm-2.control-label Text
                                    .col-sm-10
                                        input.form-control(type="email", placeholder="Text")
                                .form-group
                                    label.col-sm-2.control-label Select
                                    .col-sm-10
                                        select.selectpicker.form-control(placeholder='Select')
                                            option One
                                            option Two
                                            option Three
                                .form-group
                                    label.col-sm-2.control-label Multiple
                                    .col-sm-10
                                        select.selectpicker.form-control(placeholder='Select', multiple='multiple')
                                            option One
                                            option Two
                                            option Three
                                .form-group
                                    label.col-sm-2.control-label Textarea
                                    .col-sm-10
                                        textarea.form-control(placeholder='Textarea', rows='7')
                                .form-group
                                    label.col-sm-2.control-label Checkbox
                                    .col-sm-10
                                        .checkbox
                                            input#chb1(type='checkbox', checked='checked')
                                            label(for='chb1') Label
                                .form-group
                                    label.col-sm-2.control-label Radio
                                    .col-sm-10
                                        .radio.radio-inline
                                            input#r1(type='radio', name='controls_radio', checked='checked')
                                            label(for='r1') Radio 1
                                        .radio.radio-inline
                                            input#r2(type='radio', name='controls_radio')
                                            label(for='r2') Radio 2
                                .form-group
                                    label.col-sm-2.control-label Submit
                                    .col-sm-10
                                        button.btn.btn-default(type='submit') Submit Button
                .col-md-4
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Date & time
                        .panel-body
                            .form
                                .row
                                    .col-md-6
                                        .form-group
                                            label Date
                                            .input-group.date
                                                input.form-control(type="text", value="12/01/2015")
                                                .input-group-addon
                                                    .fa.fa-calendar
                                    .col-md-6
                                        .form-group
                                            label Time
                                            .input-group.timepicker.bootstrap-timepicker
                                                input.form-control(type="text")
                                                .input-group-addon
                                                    .fa.fa-clock-o
                                .input-daterange
                                    .row
                                        .col-md-6
                                            .form-group
                                                label Date range from
                                                .input-group.date
                                                    input.form-control(type="text", value="01/01/2016")
                                                    .input-group-addon
                                                        .fa.fa-calendar-minus-o
                                        .col-md-6
                                            .form-group
                                                label to
                                                .input-group.date
                                                    input.form-control(type="text", value="01/15/2016")
                                                    .input-group-addon
                                                        .fa.fa-calendar-plus-o
                                .row
                                    .col-md-12
                                        label Calendar
                                        .datepicker-embed
                .col-md-2
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Check and radio
                        .panel-body

<!doctype html>
<html>
	<head>
		<title>MediaGen</title>
	    <!-- Compiled and minified CSS -->
	    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
	    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link rel='icon' href='/images/teal-med-gen-logo.png'>
		<link rel='stylesheet' href='/stylesheets/landing.css'>
	</head>

	<body>
    <div>
    	<video src='/videos/dust.mp4' autoplay="true" class='background-video' loop>
		</video>

		<div class='black-overlay'>
		</div>

		<div class='container'>
			<div class='row'>

				<h1 class='title center'>Don't worry, <em style='color: teal;'>we're coming soon!</em></h1>

				<div class='col s6'>

						<div class='input-field'>
							<input type='email' id='email-field' required style='color: white !important;' name='email'>
							<label>Email</label>
						</div>
						<button class='btn waves-effect waves-light teal darken-1 email-button' style='width: 100%;'>I Want To Be First!</button>

				</div>

				<div class='col s6'>
					<h5 class='center' style='margin-top: 10%;'><a href='/app' style='color: white;'>Already a member?</a></h5>
				</div>

			</div>

			<!-- <div class='row'>
		   <form class=''>
			 <div class="input-field col s12 newsletter-input">
				 <input id="last_name" type="text" class="validate">
				 <label for="last_name">Email</label>
			 </div>

			 <a class="waves-effect waves-light btn">I Love Free Stuff!</a>

		   </form>
	   		</div> -->

		</div>
    </div>
	</body>
	<script src="//code.jquery.com/jquery-1.9.1.min.js"></script>

	<script type='text/javascript'>

	$(document).ready(function() {
		$('.container').hide();
		setTimeout(function() {
			$('.container').fadeIn(2000);
		}, 500);

		$('.tooltipped').tooltip({delay: 50});


		$('.email-button').on('click', function() {


			$.ajax({

				type: 'POST',

				url: '/news_letter',

				data: {
					email: $('#email-field').val()
				},

				success: function(response) {
					if (response) {
						Materialize.toast('Success!', 4000);
					} else {
						Materialize.toast('Something Went Wrong! Are You Already Subscribed?', 4000);
					}
				},

				error: function(err) {
					console.log(err);
				}

			});

		});



	});

	</script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
</html>

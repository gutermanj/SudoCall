extends ./parts/layout.jade
block vars
    - page = 'Dashboard';
block main
    .main-heading
        .main-title
            ol.breadcrumb
                li.active Dashboard
        .main-filter
            form.main-filter__search
                .input-group
                    input.form-control(type="text", placeholder="Search...")
                    span.input-group-btn
                        button.btn.btn-default(type="button")
                            .fa.fa-search
    .container-fluid.half-padding
        .pages.pages_dashboard
            .row
                .col-md-9.account-stats
                    .panel.panel-danger
                        .panel-heading
                            h3.panel-title Account Statistics
                        .panel-body
                            .ld-widget
                                .ld-widget__cont
                                    .ld-widget-main
                                        .ld-widget-main__title Calls Today
                                        .ld-widget-main__chart
                                    .ld-widget-side
                                        .ld-widget-side__title Campaign Overview
                                        .ld-widget-side__chart
                                        .ld-widget-side__footer
                                            .ld-widget-side__item
                                                .ld-widget-side__label Mortgage
                                                .ld-widget-side__value 45
                                            .ld-widget-side__item
                                                .ld-widget-side__label N/A
                                                .ld-widget-side__value 0
                                            .ld-widget-side__item
                                                .ld-widget-side__label N/A
                                                .ld-widget-side__value 0
                                        // Dynamic info also located public/js/template/index.js
                .col-md-3
                    .panel.panel-success
                        .panel-heading
                            h3.panel-title Overview
                        .panel-body
                            .ov-widget
                                .ov-widget__list
                                    .ov-widget__item.ov-widget__item_inc
                                        .ov-widget__value 1,950
                                        .ov-widget__info
                                            .ov-widget__title Total users
                                            .ov-widget__change
                                                span 15
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    .ov-widget__item.ov-widget__item_dec
                                        .ov-widget__value $3,230
                                        .ov-widget__info
                                            .ov-widget__title Earnings
                                            .ov-widget__change
                                                span $140
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    .ov-widget__item.ov-widget__item_warn
                                        .ov-widget__value 12,450
                                        .ov-widget__info
                                            .ov-widget__title Visits
                                            .ov-widget__change
                                                span 921
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    .ov-widget__item.ov-widget__item_tack
                                        .ov-widget__value 1,087
                                        .ov-widget__info
                                            .ov-widget__title Orders
                                            .ov-widget__change
                                                span
                                                span.fa.fa-level-up
                                                span.fa.fa-level-down
                                                span.fa.fa-bolt
                                                span.fa.fa-thumb-tack
                                    .ov-widget__bar
                                        span Conquer the world
                                        .progress
                                            .progress-bar.progress-bar-info(role="progressbar", aria-valuenow="85", aria-valuemin="0", aria-valuemax="100", style="width: 85%")
            .row
                .col-md-5
                    .panel.panel-info
                        .panel-heading
                            h3.panel-title Activity feed
                        .feed-widget
                            .feed-widget__wrap.scrollable.scrollbar-macosx
                                .feed-widget__cont
                                    .feed-widget__list
                                        .feed-widget__item.feed-widget__item_user
                                            .feed-widget__ico
                                                i.fa.fa-fw
                                            .feed-widget__info
                                                .feed-widget__text <b><a href='./'>Gary Long</a></b> has registered.
                                                .feed-widget__date 14:20 pm - 01.11.2016
                                        .feed-widget__item.feed-widget__item_product
                                            .feed-widget__ico
                                                i.fa.fa-fw
                                            .feed-widget__info
                                                .feed-widget__text New product <b><a href='./'>Sony PlayStation 4</a></b>.
                                                .feed-widget__date 10:08 pm - 01.11.2016
                                        .feed-widget__item.feed-widget__item_order
                                            .feed-widget__ico
                                                i.fa.fa-fw
                                            .feed-widget__info
                                                .feed-widget__text New order <b><a href='./'>#35108243</a></b>.
                                                .feed-widget__date 09:42 pm - 01.11.2016
                                        .feed-widget__item.feed-widget__item_subscriber
                                            .feed-widget__ico
                                                i.fa.fa-fw
                                            .feed-widget__info
                                                .feed-widget__text <b><a href='./'>Julie Payne</a></b> subscribed to a news feed.
